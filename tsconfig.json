{
    "version": "3.1.1",

    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",

        "target": "es5",
        "outDir": "./build",
        "jsx": "react",

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "noUnusedLocals": false,

        "removeComments": false,
        "preserveConstEnums": false,

        "sourceMap": true,
        "allowJs": true,
        "pretty": true,

        "noImplicitAny": false,
        "skipLibCheck": true,
        "strictNullChecks": false,

        "lib": ["ES2018"],
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ],
        "types": []
    },

    "include": [
        "./index.ts",
        "./typings/index.d.ts",
        "./src/*.ts",
        "./node_modules/@types/**/*.d.ts",
        "./node_modules/**/*.d.ts"
    ],

    "exclude": [
        "*.js",
        "*.json",
        "__tests__"
    ]
}
